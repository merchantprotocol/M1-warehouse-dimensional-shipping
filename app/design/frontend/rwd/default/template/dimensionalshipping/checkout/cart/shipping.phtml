                                                                <input name="estimate_method[<?php echo $stockId ?>]" type="radio" value="<?php echo $this->htmlEscape($rateCode) ?>" id="<?php echo $rateId ?>"<?php if ($rateCode === $shippingMethod) : ?> checked="checked"<?php endif ?> class="radio" />
